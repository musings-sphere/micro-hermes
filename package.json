{
  "name": "micro-hermes",
  "description": "musings microservice for sending emails",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:musings-sphere/micro-hermes.git",
  "author": "Francis Masha <francismasha96@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.0.2",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "start:dev": "nodemon",
    "eslint": "eslint .",
    "eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
    "format-staged": "pretty-quick --staged",
    "husky": "pretty-quick --staged && yarn prettier && yarn tslint",
    "prettier": "prettier --write \"*/**/*.{js,ts}\"",
    "tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
    "test": "jest",
    "test:dev": "jest --watch",
    "testWithCoverage": "jest --coverage",
    "test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit",
    "prepare": "husky install",
    "commit": "cz",
    "commit:signed": "cz -S"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.6",
    "app-root-path": "^3.0.0",
    "clf-date": "^0.2.0",
    "express": "^4.17.1",
    "node-mailjet": "^3.3.4",
    "nodemailer": "^6.6.3",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/nodemailer": "^6.4.4",
    "@types/sendgrid": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "nodemon": "^2.0.12",
    "prettier": "2.4.0",
    "pretty-quick": "3.1.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
